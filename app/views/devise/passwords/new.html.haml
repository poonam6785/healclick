%fieldset
  %legend Forgot your password?

  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {class: "form-horizontal", :method => :post }) do |f|

    = devise_error_messages!

    .col-sm-4
      .form-group
        = f.label :email, class: 'control-label'
        .controls
          = f.email_field :email, :autofocus => true, class: "form-control"

      .form-group
        = f.submit "Send me reset password instructions", class: 'btn btn-success'

  = render "devise/shared/links"