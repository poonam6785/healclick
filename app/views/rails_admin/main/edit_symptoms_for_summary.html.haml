= form_tag edit_symptoms_for_summary_path, method: :get do
  %p
    = label_tag "Update symptom name for all symptoms"
    = text_field_tag :symptom, @object.symptom_name
  %p
    = check_box_tag :update_notify
    Change notification for all symptoms to:
    = select_tag :notify, options_from_collection_for_select(["1 (Yes)", "0 (No)"], :to_i, :to_s)
  %p
    = submit_tag "Update all symptoms", class: 'btn btn-success'
