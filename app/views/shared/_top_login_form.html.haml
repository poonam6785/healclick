.col-lg-4.col-md-3.col-sm-4.col-xs-10
  %a.navbar-brand
    Patient Matcher

.col-lg-6.col-md-6.col-sm-8.col-xs-12
  = form_for(User.new, :as => "user", :url => session_url("user", protocol: authentication_protocol), html: {class: "form-inline"}) do |f|
  
    .form-group
      = f.text_field :login, class: "form-control", placeholder: "Username or Email"
    
    .form-group
      = f.password_field :password, class: "form-control", placeholder: "password"

    = f.submit "Sign In", class: "btn btn-default color-blue"
    
    .form-group
      %label.checkbox
        = f.check_box :remember_me, value: true
        %span.color-white Remember Me
        &nbsp&nbsp&nbsp

    .form-group
      = link_to "Forgot your password?", new_password_path('user'), class: "color-white"