%fieldset
  %legend
    = title 'My Teammates'

  .pull-right
    = paginate @following_users

  .clearfix

  - if @following_users.blank?
    %p1 There are no users
  - else
    #users-container
      = render partial: "users/user", collection: @following_users.map(&:followed_user)
    .loading_container.centered
      = image_tag 'loading.gif', size: "20x20"

  .pull-right
    = paginate @following_users

  .clearfix